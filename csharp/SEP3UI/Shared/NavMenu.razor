@using SEP3UI.Authentication
@inject NavigationManager nav

<nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" href="/">    
        <img src="Images/undercoverslogo.png" alt="Under Covers logo" style="height: 50px"/>
    </a>
    <button class="navbar-toggler ml-auto" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse @NavMenuCssClass">
        <ul class="navbar-nav ml-auto">
            <AuthorizeView>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="nav-link text-center" href="/ShoppingBasket">
                            <span class="oi oi-cart" aria-hidden="true"></span> Cart
                        </NavLink>
                    </li>
                    <button class="btn btn-info" @onclick="NavigateToLogin">Login</button>
                </NotAuthorized>
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link text-center" href="/ShoppingBasket">
                            <span class="oi oi-cart" aria-hidden="true"></span> Cart
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-center" href="/wishlist">
                            <span class="oi oi-list" aria-hidden="true"></span> Wishlist
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-center" href="/account">
                            <span class="oi oi-person" aria-hidden="true"></span> My Account
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-center" href="/Logout">
                            <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Policy="@Policies.IsAdmin">
                <li class="nav-item">
                    <NavLink class="nav-link text-center" href="/AddItems">
                        <span class="oi oi-plus" aria-hidden="true"></span> Add Items
                    </NavLink>
                </li>
            </AuthorizeView>
        </ul>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }

    private void NavigateToLogin() {
        nav.NavigateTo("/login");
    }

    private void NavigateToLogout() {
        nav.NavigateTo("/logout");
    }
}